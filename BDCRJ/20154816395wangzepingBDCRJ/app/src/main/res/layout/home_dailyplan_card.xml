<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/card"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:padding="10dp"
    android:layout_height="200dp">
    <TextView

        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置每日计划"
        android:textColor="@color/cfore2"
        android:textSize="22sp" />
    <TextView
        android:id="@+id/tv_daily_count"
        android:layout_below="@+id/rl_1"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="每日单词数量:"
        android:textColor="#000"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/et_home_daylicount"
        android:layout_alignBottom="@+id/tv_daily_count"
        android:layout_toRightOf="@+id/tv_daily_count"
        android:padding="2dp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/edittext_focus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_comp"
        android:layout_below="@+id/tv_daily_count"
        android:layout_width="match_parent"
        android:textColor="@color/lowHint"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:text="今日已完成数量"
        android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_home_alert"
            android:paddingTop="20dp"
            android:paddingLeft="40dp"
            android:layout_alignBottom="@+id/tv_daily_count"
            android:layout_alignRight="@+id/et_home_daylicount"
            android:text="修改"
            android:textColor="@drawable/text_click_style"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</RelativeLayout>
