<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_mx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ToolbarTheme"
        android:fitsSystemWindows="true">
        <com.daimajia.numberprogressbar.NumberProgressBar
            android:id="@+id/pgb_mx"
            android:layout_width="match_parent"
            app:progress_max="100"
            android:layout_marginRight="20dp"
            app:progress_text_visibility="invisible"
            app:progress_current="0"
            app:progress_unreached_color="@color/cfore2"
            app:progress_reached_color="@color/cfore1"
            app:progress_unreached_bar_height="10dp"
            app:progress_reached_bar_height="10dp"
            style="@style/NumberProgressBar_Default"/>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/mx_line1"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_mx"
        android:layout_above="@+id/rl_1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_mx_ch"
            android:layout_marginTop="150dp"
            android:text="hello"
            android:gravity="center_vertical"
            android:textSize="@dimen/biger_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_mx_right"
            android:layout_marginTop="15dp"
            android:textColor="@color/right"
            android:visibility="gone"
            android:text="正确答案"
            android:textStyle="bold"
            android:textSize="@dimen/small_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_mx_en"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:text="hello"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="50dp"
        android:layout_above="@id/low"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edittext_mx"
            android:background="@drawable/edittext_mx"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_mx"
            android:background="@null"
            android:layout_alignBottom="@+id/edittext_mx"
            android:layout_alignEnd="@+id/edittext_mx"
            android:paddingTop="15dp"
            android:paddingLeft="20dp"
            android:text="不知道"
            android:textColor="@color/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/low"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_mx_wrong"
            android:textColor="@color/wrong"
            android:visibility="gone"
            android:text="复写正确答案到输入框"
            android:textStyle="bold"
            android:textSize="@dimen/small_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
