<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_listen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:theme="@style/ToolbarTheme"
        android:fitsSystemWindows="true">
        <com.daimajia.numberprogressbar.NumberProgressBar
            android:id="@+id/pgb_listen"
            android:layout_width="match_parent"
            app:progress_max="100"
            android:layout_marginRight="20dp"
            app:progress_text_visibility="invisible"
            app:progress_current="0"
            app:progress_unreached_color="@color/cfore2"
            app:progress_reached_color="@color/cfore1"
            app:progress_unreached_bar_height="10dp"
            app:progress_reached_bar_height="10dp"
            style="@style/NumberProgressBar_Default"/>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/listen_line1"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_above="@id/h_low"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_listen"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_listen_en"
            android:text="hello"
            android:textSize="24sp"
            android:paddingBottom="20dp"
            android:visibility="gone"
            android:background="@drawable/tv_slide"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_listen_ch"
            android:layout_below="@id/tv_listen_en"
            android:layout_marginTop="5dp"
            android:text="hello"
            android:visibility="gone"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/ib_listen"
            android:src="@drawable/voice1"
            android:layout_margin="10dp"
            android:layout_width="50dp"
            android:background="@null"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/h_low"
        android:layout_above="@id/low"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edittext_listen"
            android:background="@drawable/edittext_mx"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_listen"
            android:background="@null"
            android:layout_alignBottom="@+id/edittext_listen"
            android:layout_alignEnd="@+id/edittext_listen"
            android:paddingTop="15dp"
            android:paddingLeft="20dp"
            android:text="听不出"
            android:textColor="@color/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout
>
    <LinearLayout
        android:id="@+id/low"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_listen_wrong"
            android:textColor="@color/wrong"
            android:visibility="gone"
            android:text="复写正确答案到输入框"
            android:textStyle="bold"
            android:textSize="@dimen/small_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
