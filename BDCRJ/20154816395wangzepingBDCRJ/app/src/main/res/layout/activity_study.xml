<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_study"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ToolbarTheme"
        android:fitsSystemWindows="true">
        <com.daimajia.numberprogressbar.NumberProgressBar
            android:id="@+id/pgb_study"
            android:layout_width="match_parent"
            app:progress_max="100"
            android:layout_marginRight="20dp"
            app:progress_text_visibility="invisible"
            app:progress_unreached_color="@color/cfore2"
            app:progress_reached_color="@color/cfore1"
            app:progress_unreached_bar_height="10dp"
            app:progress_reached_bar_height="10dp"
            style="@style/NumberProgressBar_Default"/>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/linear_study_1"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_study_en"
                    android:text="hello"
                    android:textSize="30sp"
                    android:minHeight="100dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btn_study1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:background="@drawable/button_click_around" />
                    <Button
                        android:id="@+id/btn_study2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:background="@drawable/button_click_around" />
                    <Button
                        android:id="@+id/btn_study3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:background="@drawable/button_click_around" />
                    <Button
                        android:id="@+id/btn_study4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:background="@drawable/button_click_around" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/linear_study_2"
                android:visibility="gone"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_study_en_2"
                    android:text="hello"
                    android:textSize="30sp"
                    android:minHeight="100dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btn_study1_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:background="@drawable/button_click_around" />
                    <Button
                        android:id="@+id/btn_study2_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:background="@drawable/button_click_around" />
                    <Button
                        android:id="@+id/btn_study3_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:background="@drawable/button_click_around" />
                    <Button
                        android:id="@+id/btn_study4_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:background="@drawable/button_click_around" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

</LinearLayout>
