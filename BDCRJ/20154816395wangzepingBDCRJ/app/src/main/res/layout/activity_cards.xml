<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ToolbarTheme"
        android:fitsSystemWindows="true">

        <com.daimajia.numberprogressbar.NumberProgressBar
            android:id="@+id/pgb_cards"
            android:layout_width="match_parent"
            app:progress_max="100"
            android:layout_marginRight="20dp"
            app:progress_text_visibility="invisible"
            app:progress_current="0"
            app:progress_unreached_color="@color/cfore2"
            app:progress_reached_color="@color/cfore1"
            app:progress_unreached_bar_height="10dp"
            app:progress_reached_bar_height="10dp"
            style="@style/NumberProgressBar_Default"/>
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_cards"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>
